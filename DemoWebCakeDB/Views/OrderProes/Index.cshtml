@model IEnumerable<DemoWebCakeDB.Models.OrderPro>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    #div-ds {
        text-align: center;
        background-color: black;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }
</style>
<div style="margin: 10px auto; width: 90%;">
    <h2 id="div-ds" style="padding-top: 10px; color: white;">ĐƠN HÀNG</h2>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ID)Order
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.NameCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.PhoneCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer.EmailCus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOrder)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.NameCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.PhoneCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Customer.EmailCus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOrder)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>