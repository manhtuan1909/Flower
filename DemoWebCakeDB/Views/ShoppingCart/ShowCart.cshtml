                            }

                        .cart_table_area .table-responsive .table tbody tr:last-child td .form-inline .btn {
                            width: 140px;
                            border-radius: 3px;
                            background: #242424;
                            color: #fff;
                            height: 31px;
                            line-height: 26px;
                            padding: 0px;
                            margin-left: 143px;
