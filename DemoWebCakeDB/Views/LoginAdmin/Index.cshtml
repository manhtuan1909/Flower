@model DemoWebCakeDB.Models.AdminUser

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/UsersLayout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="login-container">
                <h2>Login</h2>

                @using (Html.BeginForm("LoginAcount", "LoginAdmin", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(model => model.NameUser)
                        @Html.EditorFor(model => model.NameUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.NameUser, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.PasswordUser)
                        @Html.EditorFor(model => model.PasswordUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.PasswordUser, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Login" class="btn btn-primary" />
                    </div>

                    <div class="error-message">
                        @ViewBag.ErrorInfo
                    </div>
                }
            </div>
        </div>
    </div>
</div>
