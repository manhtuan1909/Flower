@model IEnumerable<DemoWebCakeDB.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    #div-ds {
        text-align: center;
        background-color: black;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }
</style>
<div style="margin: 10px auto; width: 90%;">
    <h2 id="div-ds" style="padding-top: 10px; color: white;">THÔNG TIN ĐƠN HÀNG</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IDOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product.NamePro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderPro.AddressDelivery)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Product.NamePro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UnitPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderPro.AddressDelivery)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { @class = "btn btn-success" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>