@model IEnumerable<DemoWebCakeDB.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    #div-ds {
        text-align: center;
        background-color: black;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }
</style>
<div style="margin: 10px auto; width: 70%;">
    <h2 id="div-ds" style="padding-top: 10px; color: white;">THÔNG TIN CATEGORIES</h2>
    <p>
        @Html.ActionLink("TẠO MỚI", "Create", null, new
        {
            @class = "btn btn-primary"
        })
    </p>
    <table class="table">
        <tr>
            <th>
                MÃ CATEGORY
            </th>
            <th>
                TÊN CATEGORY
            </th>

            <th>
                LỆNH
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IDCate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameCate)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryId }, new
                    {
                    @class = "btn btn-success"
                    }) |
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryId },
                    new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryId }, new
                    {
                    @class = "btn btn-danger"
                    })
                </td>
            </tr>
        }
    </table>
</div>