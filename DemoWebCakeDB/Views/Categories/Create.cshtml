@model DemoWebCakeDB.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MasterLayout.cshtml";
}

<style>
    #div-ds {
        text-align: center;
        background-color: royalblue;
        height: 50px;
        border-radius: 20px 20px 0 0;
    }
</style>
<div style="margin: 10px auto; width: 70%;">
    <h2 id="div-ds" style="padding-top: 10px; color: white;">TẠO MỚI CATEGORY</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                MÃ CATEGORY
                    @Html.EditorFor(model => model.IDCate, new
                    {
                        htmlAttributes = new
                        {
                    @class = "form-control"
                        }
                    })
                    @Html.ValidationMessageFor(model => model.IDCate, "", new
                    {
                        @class =
                    "text-danger"
                    })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                TÊN CATEGORY
                    @Html.EditorFor(model => model.NameCate, new
                    {
                        htmlAttributes = new
                    { @class = "form-control" }
                    })
                    @Html.ValidationMessageFor(model => model.NameCate, "", new
                    {
                        @class
                    = "text-danger"
                    })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="TẠO MỚI" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
    <div>
        @Html.ActionLink("TRỞ LẠI", "Index")
    </div>
</div>